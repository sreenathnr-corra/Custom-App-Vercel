{
  "name": "first-vercel-app",
  "private": true,
  "scripts": {
    "build": "remix vite:build",                      // Build for production
    "dev": "shopify app dev",                          // Run in development mode
    "config:link": "shopify app config link",          // Link config for the app
    "generate": "shopify app generate",                // Generate app files
    "deploy": "shopify app deploy",                    // Deploy app to production
    "config:use": "shopify app config use",            // Use configuration settings
    "env": "shopify app env",                          // Manage environment variables
    "start": "remix-serve ./build/server/index.js",    // Start server in production mode
    "docker-start": "npm run setup && npm run start",  // Start in Docker with setup
    "setup": "prisma generate && prisma migrate deploy", // Prisma setup for database
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .", // Linting
    "shopify": "shopify",                              // Shopify CLI commands
    "prisma": "prisma",                                // Prisma CLI commands
    "graphql-codegen": "graphql-codegen",              // Generate GraphQL code
    "vite": "vite"                                    // Run Vite (for frontend bundling)
  },
  "type": "module",
  "engines": {
    "node": "^18.20 || ^20.10 || >=21.0.0"            // Specify compatible Node.js versions
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "@remix-run/dev": "^2.7.1",
    "@remix-run/node": "^2.7.1",
    "@remix-run/react": "^2.7.1",
    "@remix-run/serve": "^2.7.1",
    "@shopify/app-bridge-react": "^4.1.2",
    "@shopify/polaris": "^12.0.0",
    "@shopify/shopify-app-remix": "^3.4.0",
    "@shopify/shopify-app-session-storage-prisma": "^5.1.5",
    "isbot": "^5.1.0",
    "prisma": "^5.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^2.7.1",
    "@remix-run/fs-routes": "^2.15.0",
    "@remix-run/route-config": "^2.15.0",
    "@shopify/api-codegen-preset": "^1.1.1",
    "@types/eslint": "^8.40.0",
    "@types/node": "^22.2.0",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.2.2",
    "vite": "^5.1.3"
  },
  "workspaces": [
    "extensions/*"
  ],
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "resolutions": {},
  "overrides": {},
